<h1>Listing bagtypes</h1>
<span class="white orange button"><%= link_to 'New Bagtype', new_bagtype_path %></span>
<br><br>
<table>
  <tr>
    <th>Size</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bagtypes.each do |bagtype| %>
  <tr>
    <td><%= bagtype.size %></td>
    <td><%= bagtype.name %></td>
    <td><span class="green white button"><%= link_to 'Show', bagtype %></span></td>
    <td><span class="black white button"><%= link_to 'Edit', edit_bagtype_path(bagtype) %></span></td>
    <td><span class="red white button"><%= link_to 'Destroy', bagtype, confirm: 'Are you sure?', method: :delete %></span></td>
  </tr>
<% end %>
</table>

<br />
