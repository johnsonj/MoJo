<h1>Listing bagtypes</h1>
<span class="white">
<%= link_to 'New Bagtype', new_bagtype_path %>
</span>
<br>
<table>
  <tr>
    <th>Size</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bagtypes.each do |bagtype| %>
  <tr>
    <td><%= bagtype.size %></td>
    <td><%= bagtype.name %></td>
    <td><%= link_to 'Show', bagtype %></td>
    <td><%= link_to 'Edit', edit_bagtype_path(bagtype) %></td>
    <td><%= link_to 'Destroy', bagtype, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
