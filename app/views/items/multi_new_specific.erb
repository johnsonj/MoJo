<div id="wrapper" style="margin:0 auto;">
  <script type="text/javascript">
      var map;
      var lats = [];
      var longs = [];
      function initialize() {

          var myOptions = {
              zoom: 8,
              center: new google.maps.LatLng(41.83872375564222, -87.62723207473755),
              mapTypeId: google.maps.MapTypeId.ROADMAP
          }

          map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

          google.maps.event.addListener(map, 'click', function(event) {
              var position = event.latLng;
              var lat = position.lat();
              var lng = position.lng();
              lats.push(lat);
              longs.push(lng);
              placeMarker(position);
              console.log(position.lat());
              console.log(position.lng());
          });

          function placeMarker(location) {
              var marker = new google.maps.Marker({
                  position: location,
                  map: map,
                  animation: google.maps.Animation.DROP
              });
              google.maps.event.addListener(marker, 'click', function() {
                  map.setZoom(8);
              });
          }
      }

      function send_all() {
          console.log("Posting Locations");
          $.post("/items_admin/mn_specific", {
                      "item_description_id": $("#item_description_id").val(),
                      "latitudes[]": lats,
                      "longitudes[]": longs },
                      function() {
                          window.location.href = "/items";
                      });
          console.log($("#item_description_id").val());
      }

  </script>
  <div style="width:500px; height:500px;float:right;">
    <div id="map_canvas" style="width:100%; height:100%"></div>
  </div>

  <div class="specific_item" style="width:300px;">
    <span class="title2">Creating Multiple Items at Specific Locations</span>
	<br><br><br><br>
	<div class="title2">Instructions:</span>
	<br><br><br><br>
	<div class="white">
		  * Select Multi multiple Specific<br>
		  * Enter the item description id you want to make<br>
		  * drop some markers on the map and hit save<br>
		  * Your items will be created there<br>
		  * You cannot remove markers at the moment so be careful<br>
		  * you're done!<br>
	</div>
	<br><br>
    

	<%= form_tag('/items/mn_specific') do %>
    	<br>    
          <span class="title2">Item:<br/></span>
          <%= text_field_tag :item_description_id %>
        
		<br><br>
        <p>
          <input type="button" onclick="send_all()" value="Submit"/>
        </p>
    <% end %>

    <span class="white"><%= link_to 'Back', items_path %></span>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        console.log("loaded dom");
        initialize();
    });
</script>