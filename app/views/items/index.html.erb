<h1>Listing items</h1>

<table>
  <tr>
    <th>User</th>
    <th>Description ID</th>
    <th>Item Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.user_id %></td>
    <td><%= item.item_description_id %></td>
    <td><%= item.item_description.name if item.item_description %></td>

    <td><%= item.latitude %></td>
    <td><%= item.longitude %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

