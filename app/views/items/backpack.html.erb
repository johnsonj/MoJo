<h1 align="left" style="border-bottom: solid; border-width:1px">Your Backpack</h1>

<br>
<div id="items">
  <div id="backpack">
    <div class="left_backpack">
      <div class="backpack_wrapper roundness">
        <div>
          <div class="bp_left roundness">
            <%= icon_for_item(@items[0]) if @items[0] %>
          </div>
          <div class="bp_right roundness">
            <%= icon_for_item(@items[1]) if @items[1] %>
          </div>
        </div>
        <div>
          <div class="bp_left roundness">
            <%= icon_for_item(@items[2]) if @items[2] %>
          </div>
          <div class="bp_right roundness">
            <%= icon_for_item(@items[3]) if @items[3] %>
          </div>
        </div>
      </div>
    </div>
   
    <div class="right">
		<div class="white links" style="text-align:left;width:100%">
	      <h3 class="white" style="border-bottom:solid 1px white; width:450px">Recent Drop History</h3>
	    </div>
      <div class="history roundness">
        <table border="0" cellspacing="5" cellpadding="5">
          <% @histories.each do |hist| %>
              <tr>
                <td align="center" style="width:100px; margin-right:-100px; text-align:center;">
                  <%= icon_for_item(hist.item) %>
                </td>
                <td align="center" style="width:100px; margin-right:-100px; text-align:center;">
                  <%= hist.signature %>
                </td>
                <td style="text-align:left">
                  Item Name: <%= hist.item.name %>
                  <br>
                  Drop date: <%= hist.stamp.strftime("%Y/%m/%d %H:%M") %>
                  <br>
                  Rarity: <%= hist.item.rarity %>
                  <br>
                  Hops: <%= hist.item.hops %>
                  <br>
                  Distance Traveled: <%= hist.item.running %>
                  <br>
                </td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>