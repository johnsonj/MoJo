<h1>Showing the backpack for <%= current_user.username %></h1>


<table>


<% @items.each do |item| %>
  <tr>
    <td><%= item.item_description.image.icon_file_name if item.item_description.image %></td>
    <td><a href="/items/<%= item.id %>"><%= image_tag item.item_description.name if item.item_description %></a></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
