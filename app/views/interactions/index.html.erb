<h1 style="width:100%; text-align:left;">Listing Interations</h1>
<span class="white orange button"><%= link_to 'New Interaction', new_interaction_path %></span>

<br><br>
<%= will_paginate %>
<br>
<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>PersonA</th>
    <th>PersonB</th>
    <th>Timestamp</th>
    <th>Deltime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @interactions.each do |interaction| %>
  <tr>
    <td><%= interaction.Loclatitude %></td>
    <td><%= interaction.loclongitude %></td>
    <td><a href="/users/<%= interaction.PersonA %>"><%= interaction.PersonA %></a> (<%=interaction.persona.username if interaction.persona %>)</td>
    <td><a href="/users/<%= interaction.PersonB %>"><%= interaction.PersonB %></a> (<%=interaction.personb.username if interaction.personb %>)</td>
    <td><%= interaction.Timestamp %></td>
    <td><%= interaction.deltime %></td>
    <td><span class="button"><%= link_to 'Show', interaction %></span></td>
    <td><span class="button"><%= link_to 'Edit', edit_interaction_path(interaction) %></span></td>
    <td><span class="button"><%= link_to 'Destroy', interaction, :confirm => 'Are you sure?', :method => :delete %></span></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />
