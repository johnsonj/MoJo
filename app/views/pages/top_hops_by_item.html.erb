<h1>Top Item Hops!!</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Name</th>
    <th>Hops</th>
    <th>Last Message</th>
  </tr>

  <% @info.each do |row| %>
      <tr>
        <td><%= image_tag row[:image] %></td>
        <td><%= row[:name] %></td>
        <td><%= row[:hops] %></td>
        <td><%= row[:last_message] %></td>
      </tr>
  <% end %>
</table>
