<%= render 'leaderboards_header' %>

<div style="width:100%; height:120px;padding-bottom:30px">
    <div class="left green white" style="padding:5px;border-radius:5px;">
		My Total Drops # of: 
	</div>
	<div class="left green white" style="padding:5px;border-radius:5px;">
		<%= current_user.item_histories.count %>
  	</div>
</div>

<!--<div class="left white"><h1>World Leaderboard<h1></div>-->

<div class="leaderboard" style="width:100%">
  <div>
    <div>
      <table style=" background:gray;">
        <tr style="background:gray">
          <th>Rank</th>
          <th>Username</th>
          <th>Drops</th>
          <th>Last Message</th>
        </tr>
        <% @top_users.each_with_index do |user, index| %>
            <tr>
              <td style="width:20px; font-size:20px; color:white; text-align: center;">
                <%= index + 1 %>
              </td>
              <td><%= user[:username] %></td>
              <td><%= user[:drops] %></td>
              <td><%= user[:last_message] %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
  <br><br>
</div>