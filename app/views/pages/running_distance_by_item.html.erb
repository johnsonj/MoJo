<%= render 'leaderboards_header' %>


<table style="background:#3C9CFF;" class="resize_rarity">
  <tr style="background:#3C9CFF">
    <th>Rank</th>
    <th>Item</th>
    <th>Rarity</th>
    <th>Distance</th>
    <th>Description</th>
    <th>Last Message</th>
  </tr>

  <% @top_items.each_with_index do |row, index| %>
      <tr>
        <td><h2 class="white"><%= index + 1 %></h2></td>
        <td><%= image_tag row[:image] %></td>
        <td><%= image_tag "rarity_icons/bg-#{row[:rarity]}.png" %></td>
        <td><%= row[:distance] %></td>
        <td style="text-align:left">
          Item Name: <%= row[:name] %>
          <br>
          Last Drop date: <%= row[:drop_date] %>
          <br>
          Rarity: <%= row[:rarity] %>
          <br>
          Hops: <%= row[:hops] %>
          <br>
        </td>
        <td><%= row[:last_message] %></td>
      </tr>
  <% end %>
</table>
<br/>