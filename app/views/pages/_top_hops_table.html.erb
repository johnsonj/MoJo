


<div class="left"><span class="white"><h1><%= name %><h1></span></div>


<table style=" background:gray;" class="resize_rarity">
  <tr style="background:gray;">
    <th>Rank</th>
    <th>Item</th>
    <th>Rarity</th>
    <th>Description</th>
    <th>Last Message</th>
  </tr>

  <% rows.each_with_index do |row, index| %>
      <tr>
        <td  style="width:20px; font-size:20px; color:white; text-align: center;"><%= index + 1 %></td>
        <td><%= image_tag row[:image] %></td>
        <td><%= image_tag "rarity_icons/bg-#{row[:rarity]}.png" %></td>
        <td>
          Item Name: <%= row[:name] %><br>
          Last Drop date: <%= row[:drop_date] %><br>
          Rarity: <%= row[:rarity] %><br>
          Hops: <%= row[:hops] %><br>
          Distance Traveled: <%= row[:distance] %><br>
        </td>
        <td><%= row[:last_message] %></td>
      </tr>
  <% end %>
</table>