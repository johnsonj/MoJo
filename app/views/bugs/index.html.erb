<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Active</th>
    <th>Infectionprob</th>
    <th>Lifespan</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.active %></td>
    <td><%= bug.infectionprob %></td>
    <td><%= bug.lifespan %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

